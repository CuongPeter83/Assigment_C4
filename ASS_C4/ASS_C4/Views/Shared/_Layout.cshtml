<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Assignment</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Assignment.styles.css" asp-append-version="true" />
</head>
<body>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
		<div class="container-fluid">

			<a asp-controller="Home" asp-action="Index"><img src="https://www.vectorkhazana.com/assets/images/products/Dior.png" alt="" width="180px" height="100px" style="padding-left:20px;"></a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">

				<ul class="navbar-nav me-auto" style="padding-left: 30px; font-size:20px;">
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					
					
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ProductList">ProductList</a>
					</li>

					<li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
							
					<li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a></li>
					<li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ShowCart">Cart</a></li>
					<li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Bill">Bill</a></li>
					<li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
					
						
					
				</ul>
			</div>
		</div>
	</nav>
	<div class="container">
		<div class="row">
			
			<img style="width:1295px;"  src="https://eyewearista.com/wp-content/uploads/divers/diorsunbanner.jpg">
		</div>

		<div class="row">
			<article class="row" style="background-color :white;">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</article>
		</div>

	</div>

	<footer class="border-top footer text-muted">
		<div class="text-center">
			&copy; 2023 - Assignment - cuongvtph28428
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
